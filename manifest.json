{
  "manifest_version": 3,
  "name": "SmartMark",
  "description": "An intelligent bookmarking tool with tagging and preview features.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
