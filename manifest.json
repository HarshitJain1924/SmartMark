{
  "manifest_version": 3,
  "name": "SmartMark",
  "description": "An intelligent bookmarking tool with tagging and preview features.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "activeTab"],
  "icons": {
    "16": "icons/bookmark-16.png",
    "48": "icons/bookmark-48.png",
    "128": "icons/bookmark-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/bookmark-16.png",
      "48": "icons/bookmark-48.png",
      "128": "icons/bookmark-128.png"
    }
  }
}
